<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/answer.css" media="screen">
  <title>Question Page</title>
</head>

<body>

    <%- include("./../general/nav") %>
  
    <main>
    <h1><%= question.text %></h1>
    <div class="sections">
      <form action="/game/answer/<%= question.questionId %>" method="POST">
        <ul class="list_questions">
          <% answersList.forEach(answer => { %>
          <li><input type="radio" name="answers" value="<%= answer.id %>" ><%= answer.text %> </li>
          <% }) %>
          <li><input type="radio" name="answers" value="other"> Otra:
              <input type="text" name="textNewAnswer">
          </li>
        </ul>
        <div class="button_cont">
          <input type="submit" value="Responder" class="button_control">
        </div>      
      </form>
    </div>
  </main>
</body>

</html>
